<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WhatsActivity">

    <ImageView
        android:id="@+id/tap_to_add_image"
        android:layout_margin="10dp"
        android:src="@drawable/round_add"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center"/>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

	  <FrameLayout
	    android:id="@+id/camera_preview"
	    android:layout_width="50sp"
	    android:layout_height="50sp"
	    android:layout_weight="1"
	    />

    <Button
        android:id="@+id/auto_identify_button"
        android:text="@string/auto_identify_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    
    <Button
        android:id="@+id/identify_button"
        android:text="@string/identify_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/result_text"
       	android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:background="@drawable/text_border"
        android:padding="5dp"
        android:text="@string/default_nothing"
        android:textSize="10sp" />


</LinearLayout>
